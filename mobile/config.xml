<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cards</name>
    <description>
        Mobile version of famous Cards.
    </description>
    <author email="jonathan.dimur@gmail.com" href="http://cordova.io">
         Product owned by J&#xAE; Studios
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="KeepRunning" value="true"/>
        <preference name="LoadingDialog" value="Bienvenue sur Cards!"/>
        <preference name="ShowTitle" value="true"/>
        <preference name="AndroidLaunchMode" value="singleTop"/>
        <preference name="DefaultVolumeStream" value="media" />
        <preference name="SplashScreenDelay" value="5000" />
        <preference name="ShowSplashScreenSpinner" value="true"/>
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="true" />
        <preference name="SplashScreenSpinnerColor" value="red" />
        <preference name="FadeSplashScreen" value="true"/>
        <preference name="FadeSplashScreenDuration" value="750"/>
        <preference name="Fullscreen" value="true" />
        <preference name="Orientation" value="sensorLandscape" />
        <preference name="BackgroundColor" value="#000000"/>
        <preference name="HideKeyboardFormAccessoryBar" value="true"/>
         <icon src="res/android/cards.png" width="80" height="80" density="ldpi" />
         <icon  src="res/android/cards.png"  width="80" height="80"  density="mdpi" />
         <icon  src="res/android/cards.png"  width="80" height="80"  density="hdpi" />
         <icon  src="res/android/cards.png" width="80" height="80"  density="xhdpi" />
         <splash src="res/android/CardsSplashscreen.png" density="mdpi"/>
         <splash src="res/android/CardsSplashscreen.png" density="xh"/>
         <splash src="res/android/CardsSplashscreen.png" density="hdpi"/>
         <splash src="res/android/CardsSplashscreen.png" density="ldpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
